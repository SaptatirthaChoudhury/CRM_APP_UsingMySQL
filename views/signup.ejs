<%- include("partials/signupSigninPage/header") -%>

    <body id="signupSignin" class="text-center">

        <main class="form-signin">
            <form action="http://localhost:8000/crm/api/v1/auth/signup" method="post">

                <h1 class="h3 mb-3 fw-normal">Customer signup </h1>
                <div class="form-floating">
                    <input type="text" class="form-control" placeholder="name" name="name" required>
                    <label for="name">Name</label>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control" placeholder="userid" name="userId" required>
                    <label for="userId">User id</label>
                </div>
                <div class="form-floating">
                    <input type="email" class="form-control" placeholder="email" name="email" required>
                    <label for="email">Email id</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" placeholder="password" name="password" required>
                    <label for="password">Password</label>
                </div>


                <div class="w-100 btn btn-lg btn-primary">
                    <input class="w-100 btn btn-lg btn-primary" type="submit" value="Sign up">
                </div>

            </form>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    </body>

    <%- include("partials/signupSigninPage/footer") -%>